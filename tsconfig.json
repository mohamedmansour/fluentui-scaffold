{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext", // ESModules support.
    "strict": true, // Required by MSFT-SEC.
    "experimentalDecorators": true, // To support FAST decorators.
    "useDefineForClassFields": false, // To support FAST observables.
    "skipLibCheck": true, // TypeScript 5 feature to disable node_modules typecheck.
    "allowSyntheticDefaultImports": true, // For supporting default imports.
    "sourceMap": true, // Needed to generate source maps.
    "incremental": true // Faster compilation.
  },
  "plugins": [
    {
      "name": "tsec" // Required by MSFT-SEC.
    }
  ]
}
